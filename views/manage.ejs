<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>manager</title>
</head>

<body>
    <small style="color:aliceblue;">
        <%=alert%>
            <%=movie%>
                <%=theater%>
    </small>
    <!-- movie: obj1, theater: obj2, seat: obj4 -->
    <br>
    <h1 style="text-align: center;">Manager</h1><br>
    <button type="button"><a href="theater">Theater</a></button>
    <button type="button"><a href="project">movie</a></button>
    <br>
    <small id="s1" style="color: green;"></small>
    <small id="err" style="color: red;"></small>
    <form method="post" action="/manager">
        <div style="padding-left: 1cm;">

            <label for="movieid">movieid: </label>
            <select id="movieid" name="movieid" placeholder="select movie Id">
                <option value=""> </option>
            </select>
            <small id="e5" style="color: red;"></small>
            <br>
            <label for="m_name">movieName:</label>
            <select id="movie_name" name="movie_name" placeholder="select movie name">
                <option value=""> </option>
            </select>
            <small id="e4" style="color: red;"></small>
            <br>
            <label for="t_id">theaterid:</label>
            <select id="hall_id" name="hall_id" placeholder="select hall Id">
                <option value=""> </option>
            </select>
            <small id="e6" style="color: red;"></small>
            <br>
            <label for="class">class_type</label>
            <select id="class" name="class">
                <option value=""></option>
                <option value="upperclass">upperclass</option>
                <option value="lowerclass"> lowerclass</option>
            </select><small id="c1"></small><br>
            <label for="price">price</label><br>
            <input type="text" id="price" name="price" placeholder="Enter price">
            <small id="e3"></small><br>
            <label for="start_time">start_time</label><br>
            <input type="datetime-local" id="start_time" name="start_time">
            <small id="e2"></small><br>
            <label for="end_time">end_time</label><br>
            <input type="datetime-local" id="end_time" name="end_time">
            <small id="e1"></small><br>
            <button type="submit">submit</button>
        </div>
    </form>

</body>
<script>

    var movi = '<%-JSON.stringify(movie)%>';
    var movie = JSON.parse(movi);

    var theater = '<%-JSON.stringify(theater)%>';
    var theater1 = JSON.parse(theater);

    var t_id = document.getElementById('hall_id');
    var m_id = document.getElementById('movieid');
    var m_name = document.getElementById('movie_name');

    for (var i = 0; i < movie.length; i++) {
        var opt = document.createElement('option');
        opt.innerHTML = movie[i].movieid;
        opt.value = movie[i].movieid;
        m_id.appendChild(opt);
        var opt1 = document.createElement('option');
        opt1.innerHTML = movie[i].moviename;
        opt1.value = movie[i].moviename;
        m_name.appendChild(opt1);
    }

    for (var i = 0; i < theater1.length; i++) {
        var opt = document.createElement('option');
        opt.innerHTML = theater1[i].theaterid;
        opt.value = theater1[i].theaterid;
        t_id.appendChild(opt);
    }




    let manager = "<%-alert%>";
    if (manager == 's1') {
        document.getElementById('s1').innerHTML = "data added succesfully";
    } else if (manager == 'e1') {
        document.getElementById('e1').innerHTML = "Enter end time";
    } else if (manager == 'e2') {
        document.getElementById('e2').innerHTML = "Enter start time";
    } else if (manager == 'e3') {
        document.getElementById('e3').innerHTML = "Enter price";
    } else if (manager == 'e4') {
        document.getElementById('e4').innerHTML = "select movie name";
    } else if (manager == 'e5') {
        document.getElementById('e5').innerHTML = "select movie Id";
    } else if (manager == 'e6') {
        document.getElementById('e6').innerHTML = "select hall id ";
    } else if (manager == 'cl1') {
        document.getElementById('err').innerHTML = " classtype for pricing already selected";
    } else if (manager == 'm1') {
        document.getElementById('err').innerHTML = "slecet movieName related to movieid";
    } else if (manager == 'c1') {
        document.getElementById('c1').innerHTML = "must select classtype";
    }
</script>

</html>